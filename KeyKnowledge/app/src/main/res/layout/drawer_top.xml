<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:id="@+id/drawerTop"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/sfondo_rosa_nero"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/layout_knownledge"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/logo_foreground"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_twotone_account_circle_24"/>
            <TextView
                android:id="@+id/nick"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="start"
                android:textSize="12dp"
                android:text="dio"/>

        </LinearLayout>

        <TextView
            android:id="@+id/emailDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textSize="11dp"
            android:layout_marginLeft="6dp"
            android:textColor="@color/white"
            android:text="dio@gmail.com"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:onClick="closeNavigation"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_round_keyboard_arrow_right_24"/>

    </LinearLayout>



</RelativeLayout>