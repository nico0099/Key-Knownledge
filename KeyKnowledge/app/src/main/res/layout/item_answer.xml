<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="top|center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient5"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itemDomandaNum"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@color/color_app_background2"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:textSize="10dp"
                android:layout_centerInParent="true"
                android:text="Domanda x"/>

            <ImageView
                android:id="@+id/smileFace"
                android:visibility="invisible"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_sentiment_satisfied_alt_24"/>
            <ImageView
                android:id="@+id/sadFace"
                android:visibility="invisible"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_sentiment_very_dissatisfied_24"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/itemDomandaText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-thin"
            android:text="testo della domandasjnsskjsnj testo della domanda testo della domanda testo della domanda"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_margin="10dp"
                    android:textSize="10dp"
                    android:layout_gravity="start"
                    android:text="Risposta data"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/circleRispData"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/white"
                        android:text="A"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#e6045d"
                        android:background="@drawable/ic_baseline_lens_24"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/textRispData"
                        android:layout_gravity="start"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:gravity="left|center"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="8dp"
                        android:text="risposta utente"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_margin="10dp"
                    android:textSize="10dp"
                    android:layout_gravity="start"
                    android:text="Risposta esatta"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/circleRispEsatta"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/white"
                        android:text="A"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#e6045d"
                        android:background="@drawable/ic_baseline_lens_24"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/textRispEsatta"
                        android:layout_gravity="start"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:gravity="left|center"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="8dp"
                        android:text="risposta esatta"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>